<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="@string/account" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <TextView
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_device_safe"
                    android:drawablePadding="@dimen/margin_Size"
                    android:drawableRight="@drawable/alm_cmail_right_arrow"
                    android:gravity="center"
                    android:text="@string/sercurity" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/new_Information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:visibility="gone"
            android:clickable="true">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="@string/new_Information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:background="@drawable/alm_cmail_right_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/private_Information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:visibility="gone"
            android:clickable="true">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="@string/private_Information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:background="@drawable/alm_cmail_right_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/public_Function"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:visibility="gone"
            android:clickable="true">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="@string/public_Function" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:background="@drawable/alm_cmail_right_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="更新" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:background="@drawable/alm_cmail_right_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true">

            <TextView
                style="@style/text_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="@string/about" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="right">

                <TextView
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_Size"
                    android:drawableRight="@drawable/alm_cmail_right_arrow"
                    android:gravity="center"
                    android:text="@string/version_Information" />
            </LinearLayout>
        </LinearLayout>

        <Button  android:id="@+id/exit_Login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/li"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_large"
            android:background="@drawable/bg_button"
            android:text="@string/exit_Login"/>
    </LinearLayout>
</ScrollView>