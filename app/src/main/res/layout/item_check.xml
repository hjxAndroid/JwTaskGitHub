<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/doctor_memo"
    style="@style/ListViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_item_bg"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dip"
        />

    <TextView
        android:id="@+id/tv_cir"
        style="@style/text_nomor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/time_space"
        android:layout_toRightOf="@+id/item_cb"
        android:background="@drawable/tvcircle"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/time_space"
        android:layout_toRightOf="@+id/item_cb"/>


    <TextView
        android:id="@+id/tv_name"
        style="@style/text_nomor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/item_cb"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_head_pic"
        android:text="任小云"
        />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/iv_head_pic"
        android:text="我是任小云"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right"/>
</RelativeLayout>
