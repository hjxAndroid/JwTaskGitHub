<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:layout_marginTop="@dimen/margin_Size"
                android:background="@drawable/settings_mid_select">

    <TextView
        android:id="@+id/tv_check_user_pic"
        style="@style/text_nomor_style"
        android:layout_width="@dimen/sign_circle"
        android:layout_height="@dimen/sign_circle"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@drawable/circular_blue"
        android:gravity="center"
        android:text="@string/tv_user_head"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_check_user_name"
        style="@style/text_nomor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_check_user_pic"
        android:text="@string/tv_userName"/>

    <TextView
        android:id="@+id/tv_check_time"
        style="@style/text_nomor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_check_user_name"
        android:text="@string/tv_userName"/>

    <TextView
        android:id="@+id/tv_check_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Large_Top_Size"
        android:drawableLeft="@drawable/poi_item_icon"
        android:drawablePadding="@dimen/margin_Size"
        android:text="丰泽街道福建中建培训中心"/>
</RelativeLayout>