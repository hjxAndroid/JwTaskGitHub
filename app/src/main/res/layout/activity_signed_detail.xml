<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginRight="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@drawable/shape_li"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_large_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Size"
            android:text="签到标题：" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_large_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于周列会调整的通知" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/line_start_sign_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginRight="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@drawable/shape_li"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_user_title"
            style="@style/text_nomor_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_Size"
            android:text="签到者：" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/text_nomor_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_toRightOf="@+id/tv_sign_user_title"
            android:text="@string/tv_userName" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2015-12-10"
            android:textColor="@color/gray"
            android:textSize="@dimen/textSize_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="签到地址："
            android:textColor="@color/gray"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/tv_signed_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泉州市捷微信息科技有限公司"
            android:textColor="@color/gray"
            android:textSize="@dimen/textSize_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginRight="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@drawable/shape_li"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_sign_remark_title"
            style="@style/text_nomor_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="备注："
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/tv_sign_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/textSize_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginRight="@dimen/margin_Size"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@drawable/shape_li">

        <TextView
            android:id="@+id/tv_signed_content_title"
            style="@style/text_nomor_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="签到内容："
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/tv_signed_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/textSize_normal" />
    </LinearLayout>

    <api.view.GridNoScrollView
        android:id="@+id/noScrollgridview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:verticalSpacing="5dp" />
</LinearLayout>