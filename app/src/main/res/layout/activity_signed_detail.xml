<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_login"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:layout_marginTop="@dimen/margin_Size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/settings_up_select"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_large_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:text="签到标题：" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_large_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于周列会调整的通知" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/line_start_sign_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:background="@drawable/shape_li"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sign_user_title"
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:text="签到者：" />

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_Size"
                    android:layout_toRightOf="@+id/tv_sign_user_title"
                    android:text="@string/tv_userName" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="2015-12-10"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="签到地址："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_signed_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="泉州市捷微信息科技有限公司"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/shape_li"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_sign_remark_title"
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="备注："
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_sign_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/shape_li">

                <TextView
                    android:id="@+id/tv_signed_content_title"
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="签到内容："
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_signed_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/shape_li">

                <TextView
                    style="@style/text_nomor_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="确认状态："
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_signed_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已确认"
                    android:textColor="@color/ios7blue"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_Size"
                android:layout_marginRight="@dimen/margin_Size"
                android:background="@color/line_background"/>
            <api.view.ListNoScrollView
                android:id="@+id/lvfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/divider_color"
                android:dividerHeight="1.0px"
                android:fadingEdge="none"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />

            <api.view.GridNoScrollView
                android:id="@+id/noScrollgridview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:numColumns="5"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_button"
        android:text="确认完成"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_large" />
</RelativeLayout>
