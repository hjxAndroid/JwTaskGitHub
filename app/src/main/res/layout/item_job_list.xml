<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/doctor_memo"
    style="@style/ListViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_item_bg"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_xz"
        android:layout_width="@dimen/doctor_width_height"
        android:layout_height="@dimen/doctor_width_height"
        android:layout_marginRight="10.0dip"
        app:border_color="@color/white"
        app:border_width="1.0dip"
        />

    <TextView android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="170dp"
        android:ellipsize="end"
        android:singleLine="true"
        style="@style/text_nomor_style"
        android:layout_toRightOf="@+id/iv_xz"
        android:layout_alignParentTop="@+id/iv_xz"
        android:layout_marginTop="3dp"
        />

    <TextView android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发布未确认"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        android:layout_toRightOf="@+id/iv_xz"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_yxj"
        android:textSize="@dimen/textSize_small"
        android:layout_alignTop="@+id/tv_state"
        android:layout_toRightOf="@+id/tv_state"
        android:layout_marginLeft="5dp" />

    <TextView android:id="@+id/tv_fbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        android:layout_toRightOf="@+id/tv_yxj"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        />

    <TextView android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-10-05"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_time"/>
</RelativeLayout>
