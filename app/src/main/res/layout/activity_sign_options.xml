<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f2f2f2"
              android:orientation="vertical">

    <TextView
        style="@style/text_lrk_nomor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_Size"
        android:background="@color/gray_f2f2f2"
        android:text="请选择:"
        android:textSize="@dimen/margin_Large_Top_Size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Size"
        android:layout_marginRight="@dimen/margin_Size"
        android:background="@color/gray_f2f2f2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start_sign_up"
            style="@style/text_lrk_nomor_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:layout_marginTop="@dimen/margin_Size"
            android:background="@drawable/bg_button"
            android:text="发起签到"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_Size"
        android:background="@color/gray_f2f2f2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_check_my_start_sign"
            style="@style/text_lrk_nomor_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:background="@drawable/bg_button"
            android:text="查看我发起的签到"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_large"/>
    </LinearLayout>

</LinearLayout>