<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeeweel.syl.jwtask.business.main.module.task.FzSortActivity">


    <api.view.LineGridView
        android:id="@+id/line_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" >
    </api.view.LineGridView>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_fgx" />


    <View android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/line_gv"
        android:layout_marginTop="10dp"
        android:background="@color/gray_fgx" />

    <api.view.LineGridView
        android:id="@+id/chaoqi_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="0dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" >
    </api.view.LineGridView>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_fgx" />

</RelativeLayout>
