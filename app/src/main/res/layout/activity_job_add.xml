<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_frame"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="任务名"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <EditText
            android:id="@+id/et_task_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="请输入任务名"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

    </LinearLayout>


    <LinearLayout android:id="@+id/li_start_time"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="开始时间"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout android:id="@+id/li_end_time"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="结束时间"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal"
            />

        <TextView
            android:id="@+id/et_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>


    <LinearLayout android:id="@+id/li_fzr"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="负责人"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_fzr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>



    <LinearLayout android:id="@+id/li_shr"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="审核人"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_shr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>



    <LinearLayout android:id="@+id/li_cyz"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="参与者"
            android:layout_gravity="center_vertical"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/tv_cyz"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>


    <LinearLayout android:id="@+id/li_gcz"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical">

        <TextView android:id="@+id/tv_gcz"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="观察者"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_gcz"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>


    <EditText android:id="@+id/et_rwyq"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:paddingLeft="10.0dip"
        android:paddingTop="5dp"
        android:background="@drawable/settings_up_select"
        android:gravity="top"
        android:hint="任务要求"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/textSize_normal"
        android:textColor="@color/list_text_name_color">
    </EditText>


    <LinearLayout android:id="@+id/li_yxj"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="优先级"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_yxj"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>




    <LinearLayout android:id="@+id/li_khbz"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settings_up_select"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:text="考核标准"
            android:textColor="@color/list_text_name_color"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/et_khbz"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:hint="请选择"
            android:maxLength="20"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

</LinearLayout>
</ScrollView>