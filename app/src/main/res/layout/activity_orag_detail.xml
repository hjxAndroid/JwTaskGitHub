<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_oragname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="组织名"
                android:textSize="@dimen/test_size" />


            <TextView
                android:id="@+id/tv_zzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="泉州市捷微信息科技"
                android:textColor="@color/list_text_color"
                android:textSize="@dimen/test_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="创建人"
                android:textSize="@dimen/test_size" />

            <TextView
                android:id="@+id/tv_cjr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="黄吉祥"
                android:textColor="@color/list_text_color"
                android:textSize="@dimen/test_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="创建时间"
                android:textSize="@dimen/test_size" />

            <TextView
                android:id="@+id/tv_cjsj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="黄吉祥"
                android:textColor="@color/list_text_color"
                android:textSize="@dimen/test_size" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rea_members"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Height"
            android:background="@drawable/shape_li"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_Size"
                android:text="组织成员"
                android:textSize="@dimen/test_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/time_space"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_button"
        android:text="添加部门"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_large" />
</RelativeLayout>

