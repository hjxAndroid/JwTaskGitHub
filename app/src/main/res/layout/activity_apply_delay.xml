<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout android:id="@+id/li_start_time"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings_up_select"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:text="任务名"
                android:textColor="@color/list_text_name_color"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_rmw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:maxLength="20"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/list_text_name_color"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/li_end_time"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings_up_select"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:text="开始时间"
                android:textColor="@color/list_text_name_color"
                android:textSize="@dimen/textSize_normal"
                />

            <TextView
                android:id="@+id/tv_kssj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:maxLength="20"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/list_text_name_color"/>

        </LinearLayout>


        <LinearLayout android:id="@+id/li_fzr"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings_up_select"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:text="结束时间"
                android:textColor="@color/list_text_name_color"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_jiesusj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:maxLength="20"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/list_text_name_color"/>

        </LinearLayout>



        <LinearLayout android:id="@+id/li_shr"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings_up_select"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:text="接收时间"
                android:textColor="@color/list_text_name_color"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_jssj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:maxLength="20"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/list_text_name_color"/>

        </LinearLayout>


        <LinearLayout android:id="@+id/li_yqs1"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings_up_select"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:text="延期时间"
                android:textColor="@color/list_text_name_color"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_sqyqsj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:hint="请选择"
                android:maxLength="20"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/list_text_name_color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>


        <EditText android:id="@+id/et_sqly"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:paddingLeft="10.0dip"
            android:layout_marginBottom="20dp"
            android:paddingTop="5dp"
            android:background="@drawable/settings_up_select"
            android:gravity="top"
            android:hint="申请理由"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/list_text_name_color">
        </EditText>


    </LinearLayout>
</ScrollView>