<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

   <TextView android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:text="企业通讯录"
       android:textSize="@dimen/textSize_normal"
       android:textColor="@color/ios7blue"
       />

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_fgx"
        android:layout_marginTop="5dp"/>

    <api.view.CustomExpandableListView
        android:id="@+id/el_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"/>


    <RelativeLayout android:id="@+id/rl_friend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/settings_mid_select"
        android:clickable="true">

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_friends"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView3" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的好友"
            android:textColor="@color/list_text_color"
            android:textSize="@dimen/textSize_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>


</LinearLayout>
</ScrollView>