<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_fb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signed_user"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:layout_marginTop="@dimen/margin_Size"
            android:background="@drawable/settings_mid_select"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign_user_pic"
                style="@style/text_nomor_style"
                android:layout_width="@dimen/sign_circle"
                android:layout_height="@dimen/sign_circle"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_Size"
                android:background="@drawable/circular_blue"
                android:gravity="center"
                android:text="@string/tv_user_head"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sign_user_name"
                        style="@style/text_nomor_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_userName" />

                    <TextView
                        style="@style/text_nomor_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/item_sign_title" />

                    <TextView
                        android:id="@+id/tv_sign_title_det"
                        style="@style/text_nomor_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/home" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_nomor_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_msg" />

                    <TextView
                        android:id="@+id/tv_sign_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/counts_value"
                        android:textSize="@dimen/counts" />

                    <TextView
                        style="@style/text_nomor_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/counts" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_Top_Size"
            android:background="@color/gray_fgx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_Layout_Height"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:layout_marginTop="@dimen/margin_Size"
            android:background="@drawable/settings_mid_select"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_sign_week"
                style="@style/text_lrk_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/time_space"
                android:drawableLeft="@drawable/cmail_calendar"
                android:drawablePadding="@dimen/time_space"
                android:gravity="center"
                android:text="@string/weeks"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_sign_date"
                style="@style/text_lrk_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/time_space"
                android:layout_toRightOf="@+id/tv_sign_week"
                android:drawablePadding="@dimen/time_space"
                android:gravity="center"
                android:text="@string/date" />

            <TextView
                android:id="@+id/tv_current_time_des"
                style="@style/text_lrk_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_sign_time"
                android:drawableLeft="@drawable/ding_remind_terminated"
                android:drawablePadding="@dimen/time_space"
                android:gravity="center"
                android:text="@string/current_time"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_sign_time"
                style="@style/text_lrk_nomor_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/time_space"
                android:layout_marginRight="@dimen/margin_Size"
                android:gravity="center"
                android:text="@string/system_time" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_Top_Size"
            android:background="@color/gray_fgx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/whole_map_size"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:layout_marginTop="@dimen/margin_Size"
            android:background="@drawable/settings_mid_select"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Size"
                android:text="签到地址:"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_Size" />

            <TextView
                android:id="@+id/tv_sign_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Size"
                android:text="@string/detail_localtion"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_Size"
            android:layout_marginRight="@dimen/margin_Size"
            android:layout_marginTop="@dimen/margin_Size"
            android:background="@drawable/settings_mid_select"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_Size"
                android:background="@null"
                android:gravity="top"
                android:hint="备注"
                android:lines="2"
                android:textColorHint="@color/edit_hint"
                android:textSize="14sp" />

        </LinearLayout>

        <api.view.GridNoScrollView
            android:id="@+id/noScrollgridview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_f2f2f2"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sign_button"
                android:layout_width="@dimen/sign_button"
                android:layout_height="@dimen/sign_button"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_Large_Top_Size"
                android:background="@drawable/circular_blue"
                android:gravity="center"
                android:text="@string/sign_up_button"
                android:textColor="@color/white"
                android:textSize="@dimen/sign_size" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>