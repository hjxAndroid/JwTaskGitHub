<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/doctor_memo"
    style="@style/ListViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_item_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_user_head1"
        android:layout_width="@dimen/doctor_width_height"
        android:layout_height="@dimen/doctor_width_height"
        android:background="@drawable/circular_portrait"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:text="姓名"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/name_size" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_xz"
        android:layout_width="@dimen/doctor_width_height"
        android:layout_height="@dimen/doctor_width_height"
        android:layout_marginRight="10.0dip"
        app:border_color="@color/white"
        app:border_width="1.0dip"
        />

    <ImageView
        android:id="@+id/iv_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/admin"
        android:visibility="gone"
        android:layout_toRightOf="@+id/iv_xz"
        android:layout_alignParentTop="@+id/iv_xz"
        android:layout_marginTop="5dp"/>

    <TextView android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任小云"
        style="@style/text_nomor_style"
        android:layout_toRightOf="@+id/iv_admin"
        android:layout_alignParentTop="@+id/iv_xz"
        android:layout_marginTop="5dp"
        />

    <TextView android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是任小云"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/textSize_small"
        android:layout_toRightOf="@+id/iv_xz"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="4dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
